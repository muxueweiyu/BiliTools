# pnpm 配置
# 启用严格的对等依赖检查
strict-peer-dependencies=false

# 设置 hoist 模式为 false，避免幽灵依赖
hoist=false

# 启用 shamefully-hoist 以兼容一些可能有问题的包
shamefully-hoist=false

# 设置存储目录（可选，使用默认位置）
# store-dir=~/.pnpm-store

# 自动安装对等依赖
auto-install-peers=true

# 解决方案
resolution-mode=highest

# 更新日志配置
# 自动生成 changelog
auto-changelog=true

# 显示包的更新信息
show-diff=true

# 安装后显示更新摘要
install-summary=true
